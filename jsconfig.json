{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@common/*": ["src/components/common/*"],
            "@routes/*": ["src/routes/*"],
            "@state/*": ["src/state/*"],
            "@utils/*": ["src/utils/*"]
        },
        "experimentalDecorators": true
    },
    "include": ["src"],
    "exclude": [".cache", "public", "node_modules"]
}
