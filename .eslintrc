{
  "env": {
    "browser": true,
    "es2020": true,
    "jest": true
  },
  "extends": ["react-app"],
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 120
      }
    ],
    "semi": ["error", "never"],
    "react/react-in-jsx-scope": "off",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "ignoredNodes": ["ConditionalExpression"],
        "ignoreComments": true
      }
    ],
    "quotes": [
      "warn",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ]
  }
}
