{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": ".",
    "typeRoots": [
      "typings"
    ]
  },
  "exclude": [
    "node_modules",
  ]
}
